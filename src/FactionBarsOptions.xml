<Ui xmlns="http://www.blizzard.com/wow/ui/"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

	<CheckButton name="FactionBarOptionsCheckButtonTemplate" inherits="InterfaceOptionsCheckButtonTemplate" virtual="true">
		<Scripts>
			<OnEnter>
				GameTooltip:SetOwner(self, "ANCHOR_LEFT");
				GameTooltip:SetText(self.tooltip);
			</OnEnter>
			<OnLeave>GameTooltip:Hide();</OnLeave>
		</Scripts>
	</CheckButton>
	<Frame name="FactionBarsOptionsFrame">
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parent_Title" inherits="GameFontNormalLarge">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset><AbsDimension x="16" y="-16"/></Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
			</Layer>
		</Layers>
		<Frames>
			<Slider name="$parent_NumBars" inherits="OptionsSliderTemplate" minValue="1" maxValue="1" valueStep="1">
				<Size x="220" y="16"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_Title" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="16" y="-40"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnValueChanged>FB.OptionsPanel_NumBarSlider_OnValueChanged(self);</OnValueChanged>
				</Scripts>
			</Slider>
			<Slider name="$parent_TrackPeriodSlider" inherits="OptionsSliderTemplate" minValue="1" maxValue="1" valueStep="1">
				<Size x="220" y="16"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_NumBars" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-20"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>FB.OptionsPanel_TrackPeriodSlider_OnLoad(self);</OnLoad>
					<OnValueChanged>FB.OptionsPanel_TrackPeriodSlider_OnValueChanged(self);</OnValueChanged>
				</Scripts>
			</Slider>
			<CheckButton name="$parent_AutoChangeWatchedBox" inherits="FactionBarOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_TrackPeriodSlider" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-20"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = "Check this to auto watch a faction with rep gain. This will show the repbar above the experience bar";</OnLoad>
					<OnShow>FB.OptionsPanel_CheckButton_OnShow(self,"autoChangeWatched","Auto Watch a Faction");</OnShow>
					<PostClick>FB.OptionsPanel_CheckButton_PostClick(self,"autoChangeWatched")</PostClick>
				</Scripts>
			</CheckButton>
			<EditBox name="$parent_FormatStringEditBox" inherits="InputBoxTemplate" autoFocus="false">
				<Size x="390" y="16"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_AutoChangeWatchedBox" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="-20" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = "Format String";</OnLoad>
					<OnShow>FB.OptionsPanel_EditBox_OnShow( self, "formatString" )</OnShow>
					<OnTextChanged>FB.OptionsPanel_EditBox_TextChanged( self, "formatString" )</OnTextChanged>
				</Scripts>
			</EditBox>


			<CheckButton name="$parent_ShowStandingBox" inherits="FactionBarOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_FormatStringEditBox" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-20"></AbsDimension></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = "Show the current standing with the faction";</OnLoad>
					<OnShow>FB.OptionsPanel_CheckButton_OnShow(self,"showStanding","Show Faction Standing");</OnShow>
					<PostClick>FB.OptionsPanel_CheckButton_PostClick(self,"showStanding")</PostClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parent_ShowPercentBox" inherits="FactionBarOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_ShowStandingBox" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-10"></AbsDimension></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = "Show the progress percentage for the current standing";</OnLoad>
					<OnShow>FB.OptionsPanel_CheckButton_OnShow(self,"showPercent","Show Faction Percent");</OnShow>
					<PostClick>FB.OptionsPanel_CheckButton_PostClick(self,"showPercent")</PostClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parent_ShowLastGainBox" inherits="FactionBarOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_ShowPercentBox" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-10"></AbsDimension></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = "Show the last reputaion gain"</OnLoad>
					<OnShow>FB.OptionsPanel_CheckButton_OnShow(self,"showLastGain","Show Last Reputation Gain");</OnShow>
					<PostClick>FB.OptionsPanel_CheckButton_PostClick(self,"showLastGain")</PostClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parent_ShowRangeGainBox" inherits="FactionBarOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_ShowLastGainBox" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-10"></AbsDimension></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = ""</OnLoad>
					<OnShow>FB.OptionsPanel_CheckButton_OnShow(self,"showRangeGain","Show Reputation Gain During Range");</OnShow>
					<PostClick>FB.OptionsPanel_CheckButton_PostClick(self,"showRangeGain")</PostClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parent_ShowRepTillNextBox" inherits="FactionBarOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_ShowRangeGainBox" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-10"></AbsDimension></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = ""</OnLoad>
					<OnShow>FB.OptionsPanel_CheckButton_OnShow(self,"showRepTillNext","Show Reputation Needed Till Next Level");</OnShow>
					<PostClick>FB.OptionsPanel_CheckButton_PostClick(self,"showRepTillNext")</PostClick>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parent_ShowRepAgeBox" inherits="FactionBarOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_ShowRepTillNextBox" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-10"></AbsDimension></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = ""</OnLoad>
					<OnShow>FB.OptionsPanel_CheckButton_OnShow(self,"showRepAge","Show Youngest Reputation Gain Age");</OnShow>
					<PostClick>FB.OptionsPanel_CheckButton_PostClick(self,"showRepAge")</PostClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parent_ShowTimeTillNextBox" inherits="FactionBarOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_ShowRepAgeBox" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-10"></AbsDimension></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = ""</OnLoad>
					<OnShow>FB.OptionsPanel_CheckButton_OnShow(self,"showTimeTillNext","Show Time Until Next Level");</OnShow>
					<PostClick>FB.OptionsPanel_CheckButton_PostClick(self,"showTimeTillNext")</PostClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parent_ShowRepsTillNextBox" inherits="FactionBarOptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_ShowTimeTillNextBox" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-10"></AbsDimension></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>self.tooltip = ""</OnLoad>
					<OnShow>FB.OptionsPanel_CheckButton_OnShow(self,"showRepsTillNext","Show Reps of last gain Until Next Level");</OnShow>
					<PostClick>FB.OptionsPanel_CheckButton_PostClick(self,"showRepsTillNext")</PostClick>
				</Scripts>
			</CheckButton>

		</Frames>
		<Scripts>
			<OnLoad>
				FB.OptionsPanel_OnLoad(self)
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
